generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Document {
  id         String   @id @default(cuid())
  title      String
  type       String   // "pdf", "md", "txt"
  url        String   // S3 or local storage
  status     String   @default("uploaded") // or "processing" / "processed"
  createdAt  DateTime @default(now())

  chunks     Chunk[]
}

model Chunk {
  id         String   @id @default(cuid())
  documentId String
  order      Int
  text       String    // Clean text content
  createdAt  DateTime  @default(now())

  document   Document  @relation(fields: [documentId], references: [id])
  vectorMeta VectorMetadata?
}

model VectorMetadata {
  id                 String   @id @default(cuid())
  chunkId            String   @unique
  embeddingProvider  String   // "openai", etc.
  dimension          Int
  createdAt          DateTime @default(now())

  chunk              Chunk    @relation(fields: [chunkId], references: [id])
}
